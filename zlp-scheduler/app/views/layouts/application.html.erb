<!DOCTYPE html>
<html>
  <head>
    <title>ZlpScheduler</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if notice %>
  <p class="alert alert-success"><%= notice %></p>
<% end %>
<% if alert %>
  <p class="alert alert-danger"><%= alert %></p>
<% end %>

<style type="text/css">
  .alert-success{
    color: white;
    font-size: medium;
  }
  .alert-danger{
    color: white;
    font-size: medium;
  }
</style>

    <%= yield %>
  </body>
</html>
