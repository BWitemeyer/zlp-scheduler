
%div{:class => 'add_sched_info'}
    = form_for @term do |f|
        %label{:for => "term_name"} Term:
        = f.collection_select :name, Term.all, :id, :name
        
        %p Cohorts in term:
        %input{:type => "checkbox", :id => "cohort_1"}
        %label{:for => "cohort_1"} Cohort 1
        %p
        %input{:type => "checkbox", :id => "cohort_2"}
        %label{:for => "cohort_2"} Cohort 2
        %p
        %input{:type => "checkbox", :id => "cohort_3"}
        %label{:for => "cohort_3"} Cohort 3
        %p
        
        = f.submit "Activate"
        = link_to "Cancel", view_term_admin_path, :class => 'button_link'