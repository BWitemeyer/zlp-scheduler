%h1 Manage Cohorts
%div{:class => "cohort_frame"}
    - @cohorts.each do |c|
        %div{:class => "custom_drop_down"}
            - id = c.id
            %input{:type => "checkbox", :id => id}
            %label{:for => id} #{c.name}
            = link_to 'Delete', delete_cohort_path(c), method: :delete, data: {confirm: 'Are you sure?'}, :class => 'right_button_link'
            %table{:class => "student_table"}
                %tr
                    %th First Name
                    %th Last Name
                    %th TAMU Email
                    %th UIN
                    %th
                    %th
                - c.users.each do |user|
                    %tr
                        %td #{user.firstname}
                        %td #{user.lastname}
                        %td #{user.email}
                        %td #{user.uin}
                        %td 
                            = link_to "Edit", edit_user_path(user), :class => 'button_link'
                        %td 
                            = link_to 'Delete', delete_user_path(user), method: :delete, data: {confirm: 'Are you sure?'}, :class => 'right_button_link'

%div{:class => 'centered_links'}   
    //****Change later
    = link_to "Create New Cohort", add_cohort_path, :class => 'button_link'
    = link_to "Back to Home", view_term_admin_path, :class => 'button_link'